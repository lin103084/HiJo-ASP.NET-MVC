@model prjHiJoMVCCore.Models.Swipe

@{
    ViewData["Title"] = "Edit";
}

<h1>修改配對狀態</h1>

<h4>配對關係表</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                <label asp-for="SwiperId" class="control-label"></label>
                <input asp-for="SwiperId" class="form-control" />
                <span asp-validation-for="SwiperId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TargetId" class="control-label"></label>
                <input asp-for="TargetId" class="form-control" />
                <span asp-validation-for="TargetId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SwipesAction" class="control-label"></label>
                <input asp-for="SwipesAction" class="form-control" />
                <span asp-validation-for="SwipesAction" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="List">取消並返回</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
